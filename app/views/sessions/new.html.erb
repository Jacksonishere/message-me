<div class="ui container">
  <%= render partial: 'shared/flashes' %>
  <h1>Welcome to MessageMe - a <i>complete Chat App</i></h1>
  
  <h3 class="ui center aligned icon header">
  <i class="power circular users orange icon"></i>
  Log in to continue
</h3>

  <div class="ui placeholder segment">
    <div class="ui two column very relaxed stackable grid">
      <div class="column">
        <%= form_with(scope: :session, url: login_path, local: true, class: "ui form") do |f| %>
          <div class="field">
            <%= f.label :username, "Username" %>
            <div class="ui left icon input">
              <%= f.text_field :username, placeholder: "Username", value: @user.username %>
              <i class="user icon"></i>
            </div>
          </div>
          <div class="field">
            <%= f.label :password, "Password" %>
            <div class="ui left icon input">
              <%= f.password_field :password, placeholder: "Password" %>
              <i class="lock icon"></i>
            </div>
          </div>
          <%= f.submit "Log in", class: "ui blue submit button orange" %>
        <% end %>







      </div>
      <div class="middle aligned column">
        <div class="ui big button">
          <i class="signup icon orange"></i>
          Sign Up
        </div>
      </div>
    </div>
    <div class="ui vertical divider">
      Or
    </div>
  </div>
</div>